---
import Hero from '~/components/widgets/Hero.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Layout from '~/layouts/PageLayout.astro';
import CalendlyWidget from '~/components/CalendlyWidget.astro';

const metadata = {
  title: 'Contact Us',
  description: 'Get in touch with FlowMate. We respond to all inquiries within 24 hours. Schedule a discovery call or email us to discuss your operational challenges.',
};
---

<Layout metadata={metadata}>
  <div slot="announcement"></div>

  <!-- Hero Widget ******************* -->

  <Hero
    title="Let's talk about your operations"
    subtitle="We respond to all inquiries within 24 hours. Whether you want to book a discovery call, ask questions, or just explore if FlowMate is right for you we're here to help."
    actions={[
      {
        variant: 'primary',
        text: 'Book a 30-minute discovery call',
        href: 'https://calendly.com/flomate/30min',
        target: '_blank',
        icon: 'tabler:calendar',
      },
    ]}
  />

  <!-- Contact Options *********** -->

  <Features2
    title="Ways to reach us"
    subtitle="Choose whatever works best for you"
    columns={2}
    items={[
      {
        title: 'Book a Discovery Call',
        description: 'Schedule a 30-minute conversation. No sales pitch just honest discussion about your situation and what might be possible.',
        icon: 'tabler:calendar',
      },
      {
        title: 'Email us directly',
        description:
          'Send your questions or details about your business. We respond to all inquiries within 24 business hours.',
        icon: 'tabler:mail',
      },
      {
        title: 'Connect on LinkedIn',
        description: 'Follow our company page for insights on operational excellence and business optimization.',
        icon: 'tabler:brand-linkedin',
      },
      {
        title: 'Learn about our work',
        description:
          'Not sure where to start? Explore our services or read about our approach and philosophy.',
        icon: 'tabler:book',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent" style="background-color: rgba(55, 147, 223, 0.05);"></div>
    </Fragment>
  </Features2>

  <!-- Contact Details *************** -->

  <div class="mx-auto max-w-3xl px-4 py-16 sm:px-6 lg:px-8">
    <div class="grid gap-12 md:grid-cols-2">
      <!-- Email -->
      <div>
        <h3 class="mb-4 text-xl font-semibold">Email</h3>
        <p class="mb-2">
          <a href="mailto:info@flomate.co" class="text-primary dark:text-primary hover:underline font-semibold">info@flomate.co</a>
        </p>
        <p class="text-sm text-muted dark:text-slate-500">
          We respond to all inquiries within 24 business hours.
        </p>
      </div>

      <!-- Calendly -->
      <div>
        <h3 class="mb-4 text-xl font-semibold">Schedule a Call</h3>
        <p class="mb-2">
          <a href="https://calendly.com/flomate/30min" target="_blank" class="text-primary dark:text-primary hover:underline font-semibold">Book a 30-minute discovery call â†’</a>
        </p>
        <p class="text-sm text-muted dark:text-slate-500">
          Find a time that works for you. European business hours.
        </p>
      </div>
    </div>

    <!-- Navigation Links -->
    <div class="mt-12 border-t border-gray-200 dark:border-gray-700 pt-8">
      <p class="text-center text-muted dark:text-slate-400">
        Want to explore more? Check out <a href="/services" class="text-primary dark:text-primary hover:underline">how we work</a>, 
        <a href="/about" class="text-primary dark:text-primary hover:underline">our approach</a>, 
        or browse <a href="/" class="text-primary dark:text-primary hover:underline">our homepage</a>.
      </p>
    </div>
  </div>

  <!-- Calendly Widget *************** -->

  <div slot="before-footer" class="w-full px-4 py-12 sm:px-6 lg:px-8">
    <h2 class="mb-8 text-center text-3xl font-bold">Pick a time</h2>
    <CalendlyWidget url="https://calendly.com/flomate/30min" height="800px" />
  </div>
</Layout>
