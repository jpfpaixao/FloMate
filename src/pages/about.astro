---
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About us',
  description: 'Learn about FlowMate\'s mission to help organizations build operational excellence. Our approach to process improvement and organizational design.',
};
---

<Layout metadata={metadata}>
  <div slot="announcement"></div>

  <!-- Hero Widget ******************* -->

  <Hero
    title="Building better ways of working"
    subtitle="FlowMate was created to help organizations grow without unnecessary complexity — by redesigning how work gets done, not by asking people to work harder."
  />

  <!-- Our Mission - Features2 Widget *** -->

  <div class="-mt-12">
    <Features2
      title="Our mission"
      subtitle="Helping organizations grow by designing work that works"
      columns={2}
      items={[
        {
          title: 'Helping businesses focus on real value',
          description:
            'We help companies become more efficient and better organized so they can focus on what truly matters: delivering value to their clients. Too much time is wasted on manual, repetitive work that adds little value. By improving how operations run, we help organizations move faster, reduce friction, and operate with clarity — without unnecessary effort or constant firefighting.',
          icon: 'tabler:target',
        },
        {
          title: 'Designing work that respects people',
          description:
            'We believe efficiency is not about replacing people, it\'s about enabling them. By automating repetitive and manual tasks, we help shift employees away from low-value work and towards more meaningful, strategic, and creative responsibilities. Well-designed operations benefit everyone: the business, its clients, and the people doing the work.',
          icon: 'tabler:users',
        },
      ]}
    >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>
  </div>
  <!-- What We Believe - Steps2 Widget ** -->

  <Steps2
    title="What we believe"
    subtitle="Our guiding principles"
    items={[
      {
        title: 'Work should be designed, not improvised',
      },
      {
        title: 'Efficiency creates space for better thinking',
      },
      {
        title: 'Technology should support people, not overwhelm them',
      },
      {
        title: 'Sustainable growth depends on how work gets done',
      },
    ]}
  />

  <!-- Why We Do This *** -->

  <div class="mx-auto max-w-4xl px-4 py-20 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="mb-8 text-4xl font-bold">Why we do this</h2>
      <p class="text-lg text-muted">
        We believe that when work is well designed, businesses perform better and people enjoy their work more. That's what drives us — helping organizations create environments where efficiency, clarity, and human potential coexist.
      </p>
      <div class="mt-8 flex flex-col items-center gap-4 sm:flex-row sm:justify-center">
        <p class="text-muted dark:text-slate-400">
          Ready to apply these principles to your business? <a href="/services" class="text-blue-600 dark:text-blue-400 hover:underline">Learn about our services</a> 
          or <a href="/contact" class="text-blue-600 dark:text-blue-400 hover:underline">get in touch</a>.
        </p>
      </div>
    </div>
  </div>
</Layout>

